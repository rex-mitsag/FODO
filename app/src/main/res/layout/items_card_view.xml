<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:focusable="true" android:clickable="true" xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:id="@+id/cardClickRelative"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="3dp"
        android:layout_marginLeft="9dp"
        android:layout_marginRight="9dp"
        android:layout_height="75dp"
        android:id="@+id/card_view_tag">

            <TextView
                android:id="@+id/itemText1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Sample Content"
                android:paddingLeft="15dp"
                android:gravity="center_vertical"
                android:layout_gravity="left"
                android:textSize="23sp"/>

            <TextView
                android:id="@+id/itemText2"
                android:layout_width="wrap_content"
                android:gravity="center_vertical"
                android:layout_gravity="right"
                android:paddingRight="15dp"
                android:layout_height="match_parent"
                android:text="Rs. 30"
                android:textSize="23sp" />

        </android.support.v7.widget.CardView>
</RelativeLayout>